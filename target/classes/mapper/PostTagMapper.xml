<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkme.backend.mapper.PostTagMapper">

    <select id="selectTagIdsByPostId" parameterType="int" resultType="int">
        SELECT tag_id FROM post_tag WHERE post_id = #{postId}
        ORDER BY tag_id ASC
    </select>

    <insert id="insertBatch">
        INSERT INTO post_tag (post_id, tag_id)
        VALUES
        <foreach collection="tagIds" item="tid" separator=",">
            (#{postId}, #{tid})
        </foreach>
    </insert>

    <delete id="deleteByPostId" parameterType="int">
        DELETE FROM post_tag WHERE post_id = #{postId}
    </delete>

</mapper>


