<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkme.backend.mapper.PostImageMapper">

    <resultMap id="PostImageMap" type="com.linkme.backend.entity.PostImage">
        <id column="image_id" property="imageId"/>
        <result column="post_id" property="postId"/>
        <result column="image_url" property="imageUrl"/>
    </resultMap>

    <select id="selectByPostId" parameterType="int" resultMap="PostImageMap">
        SELECT image_id, post_id, image_url
        FROM post_image
        WHERE post_id = #{postId}
        ORDER BY image_order ASC, image_id ASC
    </select>

    <insert id="insertBatch">
        INSERT INTO post_image (post_id, image_url, image_order)
        VALUES
        <foreach collection="images" item="img" index="idx" separator=",">
            (#{postId}, #{img}, #{idx})
        </foreach>
    </insert>

    <delete id="deleteByPostId" parameterType="int">
        DELETE FROM post_image WHERE post_id = #{postId}
    </delete>

</mapper>


