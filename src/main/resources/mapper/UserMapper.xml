<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkme.backend.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="UserResultMap" type="com.linkme.backend.entity.User">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="nickname" property="nickname"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="region" property="region"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="bio" property="bio"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 根据用户ID查询用户信息 -->
    <select id="selectById" resultMap="UserResultMap">
        SELECT * FROM user WHERE user_id = #{userId}
    </select>

    <!-- 根据邮箱查询用户信息 -->
    <select id="selectByEmail" resultMap="UserResultMap">
        SELECT * FROM user WHERE email = #{email}
    </select>

    <!-- 根据手机号查询用户信息 -->
    <select id="selectByPhone" resultMap="UserResultMap">
        SELECT * FROM user WHERE phone = #{phone}
    </select>

    <!-- 根据用户名查询用户信息 -->
    <select id="selectByUsername" resultMap="UserResultMap">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <!-- 插入新用户 -->
    <insert id="insert" parameterType="com.linkme.backend.entity.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO user (username, email, phone, password_hash, nickname, gender, birthday, region, avatar_url, bio, created_at)
        VALUES (#{username}, #{email}, #{phone}, #{passwordHash}, #{nickname}, #{gender}, #{birthday}, #{region}, #{avatarUrl}, #{bio}, #{createdAt})
    </insert>

    <!-- 更新用户信息 -->
    <update id="update" parameterType="com.linkme.backend.entity.User">
        UPDATE user SET
            username = #{username},
            email = #{email},
            phone = #{phone},
            <if test="passwordHash != null">
            password_hash = #{passwordHash},
            </if>
            nickname = #{nickname},
            gender = #{gender},
            birthday = #{birthday},
            region = #{region},
            avatar_url = #{avatarUrl},
            bio = #{bio}
        WHERE user_id = #{userId}
    </update>
    
    <!-- 更新用户密码 -->
    <update id="updatePassword">
        UPDATE user SET password_hash = #{passwordHash}
        WHERE user_id = #{userId}
    </update>
    
    <!-- 根据用户ID删除用户 -->
    <delete id="deleteById">
        DELETE FROM user WHERE user_id = #{userId}
    </delete>

    <!-- 查询所有用户（分页） -->
    <select id="selectAll" resultMap="UserResultMap">
        SELECT * FROM user ORDER BY created_at DESC LIMIT #{offset}, #{limit}
    </select>

    <!-- 统计用户总数 -->
    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM user
    </select>

</mapper>