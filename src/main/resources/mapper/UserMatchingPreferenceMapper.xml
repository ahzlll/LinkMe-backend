<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkme.backend.mapper.UserMatchingPreferenceMapper">

    <!--
      用户匹配偏好 Mapper
      
    -->

    <resultMap id="UserMatchingPreferenceMap" type="com.linkme.backend.entity.UserMatchingPreference">
        <id column="preference_id" property="preferenceId"/>
        <result column="user_id" property="userId"/>
        <result column="age_min" property="ageMin"/>
        <result column="age_max" property="ageMax"/>
        <result column="age_unlimited" property="ageUnlimited"/>
        <result column="distance_preference" property="distancePreference"/>
        <result column="relationship_mode_id" property="relationshipModeId"/>
        <result column="communication_expectation_id" property="communicationExpectationId"/>
        <result column="additional_requirements" property="additionalRequirements"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="selectByUserId" resultMap="UserMatchingPreferenceMap">
        SELECT preference_id, user_id, age_min, age_max, age_unlimited, distance_preference,
               relationship_mode_id, communication_expectation_id, additional_requirements,
               created_at, updated_at
        FROM user_matching_preference
        WHERE user_id = #{userId}
    </select>

    <select id="selectByUserIds" resultMap="UserMatchingPreferenceMap">
        SELECT preference_id, user_id, age_min, age_max, age_unlimited, distance_preference,
               relationship_mode_id, communication_expectation_id, additional_requirements,
               created_at, updated_at
        FROM user_matching_preference
        WHERE user_id IN
        <foreach item="id" collection="userIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
